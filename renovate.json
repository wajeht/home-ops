{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits"
  ],
  "docker-compose": {
    "managerFilePatterns": [
      "/(^|/)docker-compose\\.ya?ml$/",
      "/apps/.+/docker-compose\\.ya?ml$/",
      "/infra/.+/docker-compose\\.ya?ml$/"
    ]
  },
  "hostRules": [
    {
      "matchHost": "ghcr.io",
      "hostType": "docker",
      "username": "wajeht",
      "password": "{{ secrets.GH_TOKEN }}"
    }
  ],
  "ignoreDeps": [
    "ghcr.io/wajeht/ufc",
    "ghcr.io/wajeht/commit",
    "ghcr.io/wajeht/favicon",
    "ghcr.io/wajeht/calendar"
  ]
}
