{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits"
  ],
  "docker-compose": {
    "managerFilePatterns": [
      "/(^|/)docker-compose\\.ya?ml$/",
      "/apps/.+/docker-compose\\.ya?ml$/",
      "/infra/.+/docker-compose\\.ya?ml$/"
    ]
  },
  "hostRules": [
    {
      "matchHost": "ghcr.io",
      "hostType": "docker",
      "username": "wajeht",
      "password": "{{ secrets.GH_TOKEN }}"
    }
  ],
  "packageRules": [
    {
      "description": "Auto-merge own ghcr images",
      "matchDatasources": [
        "docker"
      ],
      "automerge": true,
      "automergeType": "branch",
      "ignoreTests": true,
      "matchPackageNames": [
        "/^ghcr\\.io/wajeht//"
      ]
    },
    {
      "description": "Third-party images - PR only",
      "matchDatasources": [
        "docker"
      ],
      "automerge": false,
      "matchPackageNames": [
        "!/^ghcr\\.io/wajeht//"
      ]
    }
  ]
}
