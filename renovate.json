{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["github>wajeht/renovate-config"],
  "hostRules": [
    {
      "matchHost": "ghcr.io",
      "hostType": "docker",
      "username": "wajeht",
      "password": "{{ secrets.GH_TOKEN }}"
    }
  ],
  "packageRules": [
    {
      "enabled": false,
      "matchPackageNames": ["/^ghcr\\.io/wajeht//"]
    },
    {
      "matchPackageNames": ["ghcr.io/diced/zipline"],
      "enabled": false
    }
  ]
}
