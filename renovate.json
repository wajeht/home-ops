{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits"
  ],
  "timezone": "America/Chicago",
  "labels": ["dependencies"],
  "prConcurrentLimit": 5,
  "pinDigests": true,
  "vulnerabilityAlerts": {
    "labels": ["security"],
    "automerge": true
  },
  "docker-compose": {
    "managerFilePatterns": [
      "/(^|/)docker-compose\\.ya?ml$/",
      "/apps/.+/docker-compose\\.ya?ml$/",
      "/infra/.+/docker-compose\\.ya?ml$/"
    ]
  },
  "hostRules": [
    {
      "matchHost": "ghcr.io",
      "hostType": "docker",
      "username": "wajeht",
      "password": "{{ secrets.GH_TOKEN }}"
    }
  ],
  "ignoreDeps": [
    "ghcr.io/wajeht/ufc",
    "ghcr.io/wajeht/commit",
    "ghcr.io/wajeht/favicon",
    "ghcr.io/wajeht/calendar"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": ["^linuxserver/"],
      "groupName": "linuxserver images"
    },
    {
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "labels": ["major"]
    }
  ]
}
