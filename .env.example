# Copy to .env and fill in values
# SECURITY: .env is gitignored, never commit it
# NOTE: These are also stored encrypted in secrets.enc.env (preferred method)

# =============================================================================
# GENERAL
# =============================================================================
TZ=America/Chicago
DOMAIN=example.com

# =============================================================================
# GIT ACCESS
# =============================================================================
# GitHub fine-grained token with Contents + Metadata read-only
GIT_ACCESS_TOKEN=github_pat_xxxxxxxxxxxx

# =============================================================================
# PRIVATE REGISTRY (ghcr.io)
# =============================================================================
# GitHub classic token with read:packages scope
# Required for pulling private images from ghcr.io
GHCR_TOKEN=ghp_xxxxxxxxxxxx

# =============================================================================
# HTTPS / CLOUDFLARE
# =============================================================================
ACME_EMAIL=you@example.com
CF_DNS_API_TOKEN=xxxxxxxxxxxx

# =============================================================================
# DOCO-CD
# =============================================================================
# Webhook secret (generate: openssl rand -hex 32)
WEBHOOK_SECRET=xxxxxxxxxxxx

# API secret for doco-cd API access (generate: openssl rand -hex 32)
API_SECRET=xxxxxxxxxxxx

# =============================================================================
# NOTIFICATIONS
# =============================================================================
# Discord webhook URL converted to Apprise format
# discord://webhook_id/webhook_token
APPRISE_NOTIFY_URLS=discord://xxxxxxxxxxxx/xxxxxxxxxxxx
